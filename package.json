{
  "name": "fantasy-analytics",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.5.7",
    "dotenv": "^8.2.0",
    "jest": "^25.3.0",
    "node-fetch": "^2.6.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
